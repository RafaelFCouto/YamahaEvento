@page "{id:Guid}"
@model YamahaEventos.Pages.Checked.ListVoucherModel
@{
    ViewData["Title"] = "Listagem de Brindes";
}


<html>
<head>

    <link rel="stylesheet" href="/css/btn.css">

</head>
<body>

    <div class="mb-3 d-flex justify-content-between align-items-cente">
        <h1 class="mb-3">@ViewData["Title"]</h1>
        <a href="/Checked/Index/@Model.EventId" class="btn btn-primary btn-block">Voltar</a>

    </div>
    

    @if (Model.Supplies != null && Model.Supplies.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Descrição do Item</th>
                    <th>Qtd. Total</th>
                    <th>Qtd. por Participante</th>
                    <th>Qtd. por Retirada</th>
                    <th>Tipo de brinde</th>
                    <th></th>
                        

                    

                </tr>
            </thead>
            <tbody>
                @foreach (var supply in Model.Supplies)
                {

                    <tr>
                        <td>@supply.Name</td>
                        <td>@supply.Description</td>
                        <td>@supply.TotalQuantity</td>
                        <td>@supply.TotalPerParticipants</td>
                        <td>@supply.TotalQuantityPerReceive</td>
                        <td>@supply.SupplyType</td>
                        <td>
                            <a href="/Checked/Voucher/@supply.EventId/@supply.Id" class="btn btn-dark">Registrar</a>
                        </td>
                    </tr>


                }
            </tbody>
        </table>

    }
    else
    {

        <div>
            <p><strong>Não existe brindes cadastrados neste evento, entre em contato com a Organização</strong></p>
            
        </div>

    }


</body>
</html>
